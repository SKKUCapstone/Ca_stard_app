                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="5.0"
                        android:value="4.0"
                        app:trackHeight="12dp"
                        app:tickColor="@color/white"
                        app:tickRadiusActive="3dp"
                        app:tickRadiusInactive="3dp"
                        app:thumbColor="@color/white"
                        app:thumbStrokeColor="#2C483D"
                        app:thumbStrokeWidth="4.3dp"
                        app:trackColorActive="@color/green"
                        app:trackColorInactive="#D5CEC6"
                        app:labelBehavior="gone"
                        />

                    <TextView
                        android:id="@+id/wifiTV"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:text="공간이 협소해요" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rating_quiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/icon_quiet"
                        app:tint="#70000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="소음" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/quietSlider"
                        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="5.0"
                        android:value="4.0"
                        app:trackHeight="12dp"
                        app:tickColor="@color/white"
