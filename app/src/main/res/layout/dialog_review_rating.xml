<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/review_dialog">

    <TextView
        android:id="@+id/cafeIdTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="스타벅스 정자점" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rating_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/icon_capacity"
                        app:tint="#70000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="넓이" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/capacitySlider"
                        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="5.0"
                        android:value="4.0"
                        app:trackHeight="12dp"
                        app:tickColor="@color/white"
                        app:tickRadiusActive="3dp"
                        app:tickRadiusInactive="3dp"
                        app:thumbColor="@color/white"
                        app:thumbStrokeColor="#2C483D"
                        app:thumbStrokeWidth="4.3dp"
                        app:trackColorActive="@color/green"
                        app:trackColorInactive="#D5CEC6"
                        app:labelBehavior="gone"
                        />

                    <TextView
                        android:id="@+id/capacityTV"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:text="공간이 협소해요" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rating_bright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/icon_bright"
                        app:tint="#70000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="밝기" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/brightSlider"
                        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="5.0"
                        android:value="4.0"
                        app:trackHeight="12dp"
                        app:tickColor="@color/white"
                        app:tickRadiusActive="3dp"
                        app:tickRadiusInactive="3dp"
                        app:thumbColor="@color/white"
                        app:thumbStrokeColor="#2C483D"
                        app:thumbStrokeWidth="4.3dp"
                        app:trackColorActive="@color/green"
                        app:trackColorInactive="#D5CEC6"
                        app:labelBehavior="gone"
                        />

                    <TextView
                        android:id="@+id/brightTV"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:text="공간이 협소해요" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rating_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/icon_clean"
                        app:tint="#70000000" />

