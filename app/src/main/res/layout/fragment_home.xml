<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kakao.vectormap.MapView
            android:id="@+id/kakaoMV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/searchET"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@drawable/card"
                android:ems="10"
                android:hint="어떤 카페를 찾으시나요?"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/gpsBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/gps_button"
                android:contentDescription="GPS" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:behavior_expandedOffset="76dp"
        app:behavior_fitToContents = "false"
        app:behavior_hideable="false"
        app:behavior_peekHeight="80dp"
        app:behavior_halfExpandedRatio="0.45"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <androidx.cardview.widget.CardView
            android:id="@+id/scrollBarCV"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/myLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용인시 기흥구"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:background="@drawable/chip"
            app:layout_constraintBottom_toTopOf="@id/yourPreferCafeTV"
            app:layout_constraintTop_toBottomOf="@id/scrollBarCV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/yourPreferCafeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정환님이 좋아할만한 근처 카페"
            android:textSize="20sp"
            android:layout_marginVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myLocationTV"
            app:layout_constraintBottom_toTopOf="@id/cafeListRV"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cafeListRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#FBFAF9"
            android:paddingHorizontal="16dp"
            android:paddingBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yourPreferCafeTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>